#!/usr/bin/env node

var program = require('commander');

program.version('0.0.1');

// help
program
    .command('help')
    .description('显示使用帮助')
    .action(() => {
        program.outputHelp();
    });

// cteate
program
    .command('create [dir]')
    .description('创建一个空的博客')
    .action((dir) => {
        console.log('create %s', dir);
    });

// preview
program
    .command('preview [dir]')
    .description('实时预览')
    .action((dir) => {
        console.log('preview %s', dir);
    });

// build
program
    .command('build [dir]')
    .description('生成静态HTML')
    .option('-o, --output <dir>', '生成静态HTML存放目录')
    .action((dir, options) => {
        console.log('create %s, output %s', dir, output);
    });

// 解析命令
program.parse(process.argv);
